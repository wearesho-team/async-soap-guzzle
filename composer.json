{
  "name": "wearesho-team/async-soap-guzzle",
  "description": "An asynchronous SOAP client build on top of Guzzle.",
  "keywords": [
    "SOAP",
    "asynchronous",
    "Guzzle"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Meng Tian",
      "email": "tianmeng94@hotmail.com"
    },
    {
      "name": "Roman Varkuta",
      "email": "roman.varkuta@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-soap": "*",
    "guzzlehttp/guzzle": "^6.1",
    "meng-tian/php-async-soap": "~1.0",
    "meng-tian/soap-http-binding": "~0.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "autoload": {
    "psr-4": {
      "Wearesho\\AsyncSoap\\Guzzle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\AsyncSoap\\Guzzle\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "7.1"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit"
  }
}
